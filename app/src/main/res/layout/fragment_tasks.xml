<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_background"
    tools:context=".TasksFragment" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tasksRecyclerView"
        android:layout_width="383dp"
        android:layout_height="637dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/habits_list_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_task" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addTaskFab"
        android:layout_width="77dp"
        android:layout_height="82dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="68dp"
        android:contentDescription="@string/add_task"
        android:foreground="@drawable/ic_add_white_24dp"
        android:foregroundTint="#009688"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/mint_accent"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="24dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.FAB.Circular"
        app:tint="@color/mint_accent" />

    </androidx.constraintlayout.widget.ConstraintLayout>