<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".AddTaskFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/addTaskTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить задачу"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/taskNameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Название задачи"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addTaskTitleTextView" />

        <TextView
            android:id="@+id/taskTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Тип задачи"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskNameEditText" />

        <RadioGroup
            android:id="@+id/taskTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/taskTypeTextView">

            <RadioButton
                android:id="@+id/simpleTaskRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Простая задача"
                android:textColor="#FFFFFF"
                android:buttonTint="#4285F4" />

            <RadioButton
                android:id="@+id/oneTimeTaskRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Разовая задача"
                android:textColor="#FFFFFF"
                android:buttonTint="#4285F4" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/deadlineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/taskTypeRadioGroup">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Срок выполнения"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/deadlineDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="Выберите дату"
                android:padding="8dp"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/importanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Важность"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deadlineLayout" />

        <RadioGroup
            android:id="@+id/importanceRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/importanceTextView">

            <RadioButton
                android:id="@+id/lowPriorityRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Низкая"
                android:textColor="#FFFFFF"
                android:buttonTint="#4285F4" />

            <RadioButton
                android:id="@+id/mediumPriorityRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Средняя"
                android:textColor="#FFFFFF"
                android:buttonTint="#4285F4" />

            <RadioButton
                android:id="@+id/highPriorityRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Высокая"
                android:textColor="#FFFFFF"
                android:buttonTint="#4285F4" />
        </RadioGroup>

        <Button
            android:id="@+id/saveTaskButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Сохранить"
            android:textColor="#FFFFFF"
            app:backgroundTint="#009688"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/importanceRadioGroup" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>