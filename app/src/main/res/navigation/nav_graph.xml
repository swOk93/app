<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.myapplication.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_AddHabitFragment"
            app:destination="@id/AddHabitFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddHabitFragment"
        android:name="com.example.myapplication.AddHabitFragment"
        android:label="@string/add_habit"
        tools:layout="@layout/fragment_add_habit">

        <action
            android:id="@+id/action_AddHabitFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>