<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ON-состояние: указываем вектор с галочкой -->
    <item
        android:state_checked="true"
        android:drawable="@drawable/ic_check"
        android:color="@color/colorGreen" />

    <!-- OFF-состояние: указываем вектор без галочки -->
    <item
        android:state_checked="false"
        android:drawable="@drawable/ic_unchecked"
        android:color="@color/mint_light"/>

</selector>
